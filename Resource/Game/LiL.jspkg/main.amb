top: VBox {
	title: ImageView {
		name: "main_title"
	}
    bottons: HBox {
        start_button: Button {
                title:  "Goto town"
                pressed: Event() %{
                        enterView("town", null) ;
                %}
        }
        quit_button: Button {
                title: "Quit"
                pressed: Event() %{
                     leaveView(1) ;
                %}
        }
    }
}

