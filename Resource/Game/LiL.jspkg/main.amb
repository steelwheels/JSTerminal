top: VBox {
    title: Image {
	name: String "main_title"
    }
    bottons: HBox {
        start_button: Button {
                title:  String "Goto town"
                pressed: Event() %{
                        enterView("town") ;
                %}
        }
        quit_button: Button {
                title: String "Quit"
                pressed: Event() %{
                     leaveView(1) ;
                %}
        }
    }
}

